<Window x:Class="ZaldrionNetMonitorGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZALDRION NET MONITOR"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#111111">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="ZALDRION NET MONITOR"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#BF5FFF"
                   Margin="0,0,0,10"/>

        <!-- Filtros -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Proceso:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <!--  nombre usado en el .cs -->
            <TextBox x:Name="ProcessFilterTextBox"
                     Width="200"
                     Margin="0,0,15,0"
                     Background="#222222"
                     Foreground="White"
                     BorderBrush="#BF5FFF"/>

            <TextBlock Text="Protocolo:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <!-- ðŸ‘‡ nombre usado en el .cs -->
            <ComboBox x:Name="ProtocolComboBox"
                      Width="100"
                      Margin="0,0,15,0"
                      Background="#222222"
                      Foreground="White"
                      BorderBrush="#BF5FFF">
            <ComboBoxItem Content="Todos" Foreground="#BF5FFF" IsSelected="True"/>
            <ComboBoxItem Content="TCP" Foreground="#BF5FFF"/>
            <ComboBoxItem Content="UDP" Foreground="#BF5FFF"/>

            </ComboBox>

            <Button x:Name="RefreshButton"
                    Content="ðŸ”„ Actualizar"
                    Width="120"
                    Margin="0,0,10,0"
                    Background="#BF5FFF"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="RefreshButton_Click"/>

            <Button x:Name="ExportJsonButton"
                    Content="ðŸ’¾ Exportar JSON"
                    Width="140"
                    Background="#333333"
                    Foreground="White"
                    Click="ExportJsonButton_Click"/>
        </StackPanel>

        <!-- Tabla principal -->
        <DataGrid x:Name="ConnectionsDataGrid"
          Grid.Row="2"
          AutoGenerateColumns="False"
          Background="#1A1A1A"
          Foreground="White"
          GridLinesVisibility="None"
          HeadersVisibility="Column"
          BorderBrush="#333333"
          RowBackground="#1A1A1A"
          AlternatingRowBackground="#151515"
          CanUserAddRows="False">

    <!-- ðŸŽ¨ ESTILO DIRECTO PARA LOS HEADERS -->
    <DataGrid.ColumnHeaderStyle>
        <Style TargetType="DataGridColumnHeader">
            <!-- Texto violeta -->
            <Setter Property="Foreground" Value="#BF5FFF"/>
            <!-- Fondo oscuro, nada de blanco -->
            <Setter Property="Background" Value="#111111"/>
            <!-- Negrita y centrado -->
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#444444"/>
        </Style>
    </DataGrid.ColumnHeaderStyle>

    <DataGrid.Columns>
        <DataGridTextColumn Header="Estado" Binding="{Binding State}" Width="*" />
        <DataGridTextColumn Header="Proceso" Binding="{Binding ProcessName}" Width="2*" />
        <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="*" />
        <DataGridTextColumn Header="IP Remota" Binding="{Binding RemoteAddress}" Width="2*" />
        <DataGridTextColumn Header="Puerto" Binding="{Binding RemotePort}" Width="*" />
        <DataGridTextColumn Header="Protocolo" Binding="{Binding Protocol}" Width="*" />
        <DataGridTextColumn Header="Ãšltima Vista" Binding="{Binding LastSeen}" Width="2*" />
    </DataGrid.Columns>
</DataGrid>

    </Grid>
</Window>
